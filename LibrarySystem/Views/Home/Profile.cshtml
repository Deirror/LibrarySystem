@model LibrarySystem.Models.Domain.User


    <div class="p-3 mt-4 container"
     style="background-color:white;width:450px; margin-top:235px">
        <h1 class="text-center" style="font-style:italic">Profile Details</h1>

      
            <div class="mb-3">
                <label class="form-label">Nickname</label>
                <input type="text" class="form-control" disabled asp-for="Nickname" />

            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" class="form-control" disabled asp-for="Email" />

            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" disabled asp-for="Name" />
            </div>
@{
    
    if(Model.IsConfirmed=="Yes")
    {
            <div class="mb-3">
            <label class="form-label">Status</label>
            <input type="text" class="form-control" disabled placeholder="Approved" />

            </div>
        }
        else if(Model.IsConfirmed=="No")
        {
            <div class="mb-3">
                <label class="form-label">Status</label>
                <input type="text" class="form-control" disabled placeholder="Not Approved Yet" />
                <label class="form-label text-warning">This means that you are not allowed to make requests for library units yet!</label>
           </div>
        }

        }
           
    </div>

