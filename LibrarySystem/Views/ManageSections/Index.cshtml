@model List<LibrarySystem.Models.Domain.Section>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<a asp-controller="ManageSections" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a asp-controller="ManageSections" asp-action="Upsert" class="btn btn-secondary" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="ManageSections" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>