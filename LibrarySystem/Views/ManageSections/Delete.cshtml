@model LibrarySystem.Models.Domain.Section
@{
}

<div class="mt-2 container"
     style="background-color:white;width:450px; margin-top:235px">



    <form method="post">

        <input asp-for="Id" hidden />

        <h1 class="text-center" style="font-style:italic">Delete Section</h1>
        <div class="mb-3">
            <label class="form-label">Nickname</label>
            <input type="text" class="form-control" disabled asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" disabled asp-for="Description" />
        </div>
        <div class="container">

            <div class="mb-3">
                <button type="submit" class="btn btn-danger text-center" style="float:left">Delete</button>
            </div>
            <a asp-controller="ManageSections" asp-action="Index" class="btn btn-link" style="float:right"> Back to List</a>
        </div>

    </form>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
</div>
