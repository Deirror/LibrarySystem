@using LibrarySystem.Utility;
@model List<LibrarySystem.Models.Domain.User>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<a asp-controller="ManageRoles" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>

@{
    if (NavigationHelper.roleName == "Reader")
    {

        <h3>Confirmed Accounts</h3>
        <table class="table" >
            <thead>
                <tr>
                    <th>
                        Nickname
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(x => x.IsConfirmed == "Yes"))
                {
                    <tr>
                        <td>
                            @item.Nickname
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a asp-controller="ManageRoles" asp-action="Upsert" class="btn btn-secondary" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="ManageRoles" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <hr />

        <h3>Unconfirmed Accounts</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nickname
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(x => x.IsConfirmed == "No"))
                {
                    <tr>
                        <td>
                            @item.Nickname
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a asp-controller="ManageRoles" asp-action="Confirm" class="btn btn-success" asp-route-id="@item.Id"><i class="bi bi-check-lg"></i> Confirm</a>
                            <a asp-controller="ManageRoles" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nickname
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Nickname
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a asp-controller="ManageRoles" asp-action="Upsert" class="btn btn-secondary" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="ManageRoles" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
}
