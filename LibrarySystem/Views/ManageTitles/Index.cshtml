@model List<LibrarySystem.Models.Domain.Title>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<a asp-controller="ManageTitles" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Author
            </th>
             <th>
                Year
            </th>
             <th>
                Type
            </th>

            <th>
                Section
            </th>
            <th>
   
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="max-width:200px">
                    @item.Name
                </td>
                <td style="max-width:300px">
                    @item.Description
                </td>

                <td style ="max-width:100px">
                    @item.Author
                </td>

                <td>
                    @item.Year
                </td>

                <td>
                    @item.Type
                </td>

                <td>
                    @item.Section.Name
                </td>

                <td>
                    <a asp-controller="ManageTitles" asp-action="Upsert" class="btn btn-secondary" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="ManageTitles" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
