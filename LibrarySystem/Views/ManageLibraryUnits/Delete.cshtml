@model LibraryUnit

<div class=" mt-2 container"
     style="background-color:white;width:400px; padding-bottom:10px">

    <form method="post">
        <input asp-for="Id"hidden/>
        <input asp-for="Title" hidden />
                <h1 class="text-center" style="font-style:italic">Delete Library Unit</h1>

                <div class="mb-3">
                     <label class="form-label">Title</label>
                      <input type="text" class="form-control"disabled asp-for="Title.Name" />

                </div>


                <div class="mb-3">
                        <label class="form-label">Current Condition</label>
                          <input type="text" class="form-control" disabled asp-for="CurrentCondition" />
                </div>

                <div class="mb-3">
                           <label class="form-label">Medium</label>
                               <input type="text" class="form-control" disabled asp-for="Medium" />
                </div>

                <div class="mb-3">
                                <label class="form-label">Place</label>
                             <input type="text" class="form-control" disabled asp-for="Place" />
                </div>



                <div class="mb-3">
                    <button type="submit" class="btn btn-danger text-center" style="float:left">Delete</button>
                </div>

        <div class="text-center">
            <a asp-controller="ManageLibraryUnits" asp-action="Index" class="btn btn-link" style="float:right;"> Back to List</a>
        </div>
    </form>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
</div>





