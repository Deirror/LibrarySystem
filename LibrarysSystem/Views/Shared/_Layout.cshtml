@using LibrarysSystem.User_Managment;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibrarysSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibrarysSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Library System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

    
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                           
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Library Units</a>
                        </li>
                      
                        @{
                            if(!Account.IsLogged){
                        <li class="nav-item" style="margin-left:860px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Register">Register</a>
                        </li>

                        <li class="nav-item" >
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                                </li>
                            }
                            else
                            {

                                
                                if (Account.Role == "Admin")
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-person-plus"></i> Create Roles
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item"
                                                asp-area=""
                                                asp-controller="CreateLibrarian"
                                                asp-action="Create">
                                                    Librarian
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item"
                                                asp-area=""
                                                asp-controller="CreateAdmin"
                                                asp-action="Create">
                                                    Admin
                                                </a>
                                            </li>

                                        </ul>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-book"></i> Details for Library Units
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-area=""
                                                   asp-controller="Section"
                                                   asp-action="Details">
                                                    Section
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item"
                                                   asp-area=""
                                                   asp-controller="Title"
                                                   asp-action="Details">
                                                    Title
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-area=""
                                                   asp-controller="LibraryUnit"
                                                   asp-action="Details">
                                                    Library unit
                                                </a>
                                            </li>

                                        </ul>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Reader's Requests</a>
                                    </li>


                                    <li class="nav-item" style="margin-left:390px">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Logout" asp-action="Logout">Logout</a>
                                    </li>
                                }
                                else if(Account.Role=="Reader")
                                {
                                   
                                    <li class="nav-item" style="margin-left:930px">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Logout" asp-action="Logout">Logout</a>
                                    </li>

                                }
                                else if(Account.Role=="Librarian")
                                {
                                   
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-book"></i> Details for Library Units
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-area=""
                                                   asp-controller="CreateLibrarian"
                                                   asp-action="Create">
                                                    Section
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item"
                                                   asp-area=""
                                                   asp-controller="CreateAdmin"
                                                   asp-action="Create">
                                                    Title
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item"
                                                   asp-area=""
                                                   asp-controller="CreateAdmin"
                                                   asp-action="Create">
                                                    Library unit
                                                </a>
                                            </li>

                                        </ul>
                                    </li>
                                  
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Reader's Requests</a>
                                    </li>

                                    <li class="nav-item" style="margin-left:570px">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Logout" asp-action="Logout">Logout</a>
                                    </li>
                                }

                            }

                        }
                    </ul>
                </div>

                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:white">
        <div class="container">
            &copy; 2023 - LibrarysSystem
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
